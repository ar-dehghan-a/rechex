{
  "manifest_version": 3,
  "name": "Rechex",
  "version": "0.0.1",
  "description": "React Chrome Extension",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Rechex",
    "default_popup": "popup/index.html"
  },
  "options_page": "options/index.html",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./scripts/hello.js"
      ]
    }
  ]
}